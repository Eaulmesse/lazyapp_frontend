generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model Waitlist {
  id          Int      @id @default(autoincrement())
  email       String   @unique @db.VarChar(255)
  preferences Json     @default("[]")
  createdAt   DateTime @default(now()) @map("created_at")

  @@map("waitlist")
}
